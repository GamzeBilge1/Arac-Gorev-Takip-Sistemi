<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/arkaplan2"
    tools:context=".MainActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="35dp">

            <!-- Tarih Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tarihText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tarih:"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/tarihEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="DD/MM/YYYY"
                    android:textAlignment="center"
                    android:background="@drawable/textborder"
                    android:clickable="true"
                    android:enabled="false"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Plaka Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/plakatext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plaka No:"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/plakaEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="12-ABC-1234"
                    android:enabled="false"
                    android:inputType="text"
                    android:background="@drawable/textborder"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Dönüş Km Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/donusKmtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dönüş Km.:"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/DonusKmEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="0000"
                    android:inputType="number"
                    android:background="@drawable/textborder"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Çıkış Km Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/cikisKmText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Çıkış Km.:"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/cikisKmEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="0000"
                    android:inputType="number"
                    android:background="@drawable/textborder"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Dönüş Saati Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/donusSaatText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dönüş Saati:"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/donusSaatEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="HH:MM"
                    android:inputType="time"
                    android:background="@drawable/textborder"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Çıkış Saati Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/cikisSaatText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Çıkış Saati:"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/cikisSaatEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="HH:MM"
                    android:inputType="time"
                    android:background="@drawable/textborder"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Katedilen Km Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/katedilenKmText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Katedilen Km.:"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/katedilenKmEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="0000"
                    android:inputType="number"
                    android:background="@drawable/textborder"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Departman Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/departmanText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Departman:"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/departmanEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:background="@drawable/textborder"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Görev Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/gorevText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Görev:"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/gorevEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:background="@drawable/textborder"
                    android:padding="8dp" />
            </LinearLayout>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/button"
            android:layout_width="222dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:onClick="detayGuncelle"
            android:text="GÜNCELLE" />


    </LinearLayout>



</LinearLayout>
