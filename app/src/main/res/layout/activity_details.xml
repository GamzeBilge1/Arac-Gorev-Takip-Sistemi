<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".details"
    android:orientation="vertical"
    android:background="@drawable/arkaplan"
    android:fitsSystemWindows="false">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/background"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/sendEmailButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:onClick="sendEmail"
                    android:scaleType="centerInside"
                    android:src="@drawable/mail1" />

                <ImageButton
                    android:id="@+id/pdfButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:onClick="pdf"
                    android:scaleType="centerInside"
                    android:src="@drawable/pdf2" />

                <ImageButton
                    android:id="@+id/excelButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:onClick="excel"
                    android:scaleType="centerInside"
                    android:src="@drawable/excel" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_background"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/detailsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/updateButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:onClick="ayrintilariGuncelle"
                    android:padding="12dp"
                    android:text="Güncelle"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                     />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Kayıtlar"
                    android:onClick="liste"
                    />

                <Button
                    android:id="@+id/logoutButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:onClick="logout"
                    android:padding="12dp"
                    android:text="Çıkış Yap"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                     />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
